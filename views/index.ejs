<header>
    <div class="row">
        <section class="section col s10 m6 l4 offset-l1 offset-s1">
            <div class="card center-align ">

                <div class='teal lighten-1'><span class="card-title white-text">Raise a Ticket</span></div>
                    <form action="">
                            <div class="input-field">
                                <i class="material-icons prefix">person</i>
                                <input type="text" name="name" id="name" required class='validate'>
                                <label for="name">Your Name</label>
                            </div>

                            <div class="input-field">
                                    <i class="material-icons prefix">assignment_ind</i>
                                    <input type="text" name="reg_number" id="reg_number" required class='validate'>
                                    <label for="reg_number">Your Registration Number</label>
                            </div>

                            <div class="input-field">
                                    <i class="material-icons prefix">email</i>
                                    <input type="email" name="email" id="email" class="validate">
                                    <label for="email">Your e-Mail </label>
                            </div>

                            <div class="input-field select">
                                <h3><label for="concerned_dept" id='select_label'>Concerned Department</label></h3>
                                <select name="concerned_dept" class="browser-default" id="concerned_dept" required>
                                    <optgroup label="School of Engineering and Technology">
                                        <option value="CSE">Computer Science and Engineering</option>
                                        <option value="ME">Mechanical Engineering</option>
                                        <option value="EE">Electrical Engineering</option>
                                        <option value="ECE">Electronics and Communication Engineering</option>
                                        <option value="CE">Civil Engineering</option>
                                        <option value="FT">Food Technology</option>
                                        <option value="CS">Computer Science</option>
                                    </optgroup>
                                    <optgroup label="School of Humanities and Social Sciences">
                                            <option value="ELL">English Language and Literature</option>
                                            <option value="IS">Islamic Studies</option>
                                    </optgroup>
                                </select>
                                
                            </div>

                            
                            <div class="input-field">
                                <i class="material-icons prefix">message</i>
                                <textarea name="ticket_body" id="ticket_body" cols="30" rows="10" class="materialize-textarea" placeholder="Message" required class='validate'></textarea>
                            </div>
                            
                            <button class="btn waves-effect waves-light teal accent-4" type="submit" id='ticket_submit' name="action">Raise Ticket
                                    <i class="material-icons left">send</i>
                            </button>

                            <div class="input-field teal darken-3">
                                    <span id='response_message' class='flow-text white-text'></span>
                            </div>
                        </form>
            </div>
        </section>

        <div class='hide-on-med-and-up separator'> </div>

        <section class="section col s10 m6 l4 offset-l2 offset-s1">
                <div class="card center-align" id='check_status'>

                        <div class='teal lighten-1'><span class="card-title white-text">Check Ticket Status</span></div>
                            <form action="">
                                    <div class="input-field">
                                        <i class="material-icons prefix">person</i>
                                        <input type="text" name="ticket_id" id="ticket_id">
                                        <label for="ticket_id">Ticket ID</label>
                                    </div>
                                    <button class="btn waves-effect waves-light teal accent-4" type="submit" name="action" id='ticket_status_check'>Check Status
                                            <i class="material-icons left">send</i>
                                    </button>

                                    <a class="waves-effect waves-light btn modal-trigger hide" href="#modal1">Modal</a>

                                    <!-- //  Response from server -->

                                    <div class="input-field teal darken-3">
                                        <span id="ticket_response" class='flow-text white-text'></span>
                                    </div>

                                     <!-- Modal Structure -->
                                        <div id="modal1" class="modal modal-fixed-footer">
                                        <div class="modal-content">
                                            <h6 id='ticket_id_response'>Modal Header</h6>
                                            <div class="progress">
                                                    <div class="indeterminate"></div>
                                            </div>
                                            <div id='ticket_embed_response'></div>
                                        </div>
                                        <div class="modal-footer">
                                            <a href="#!" class="modal-close waves-effect waves-green btn-flat">Acknowledged</a>
                                        </div>
                            </form>
                        
                </div>
        </section>


        
  

 
